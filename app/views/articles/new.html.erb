<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: "Title" %>
  <div>
  <div class="form-group">
    <%= f.text_area :body, placeholder: "Body of article" %>
  </div>
  <div class="form-group">
    <%= f.label :private %>
    <%= f.check_box :private %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
